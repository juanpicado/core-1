{
  "version": "4.0.0",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "bump": "patch",
      "conventionalCommits": true,
      "ignoreChanges": ["CHANGELOG.md"],
      "message": "chore(release): publish %s"
    }
  },
  "registry": "https://registry.npmjs.org/",
  "loglevel": "success"
}
